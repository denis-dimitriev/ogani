{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "server",
    "outDir": "server/dist",
    "rootDir": "server/src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}